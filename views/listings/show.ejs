<% layout("layouts/boilerplate")%>

    <div class="row">
        <div class="col-8 offset-3 mt-3">
            <h3> <b>
                    <%=listings.title%>
                </b></h3>
        </div>

        <div class="card col-6 offset-3 show-card">
            <img src="<%= listings.image.url%>" class="card-img-top show-image" alt="listing-image">
            <div class="card-body">
                <p class="card-text">
                    <br>
                    <%=listings.description%> <br>
                        &#8377; <%=listings.price.toLocaleString("en-in")%> <br>
                            <%=listings.location%> <br>
                                <%=listings.country%> <br>

                </p>

            </div>
        </div>

        <br> <br>


    </div>

    <div class="btns">

        <a href="/listings/<%=listings._id%>/edit" class="btn btn-dark col-2 offset-3 ">Edit</a> <br>

        <form method="post" action="/listings/<%= listings._id%>?_method=DELETE">
            <button class="btn btn-dark delete-btn  offset-5">Delete</button>

        </form>
    </div>


    <div class="col-8 offset-3">
        <hr>
        <h4>leave a review</h4>

        <form action="/listings/<%= listing.id %>/reviews" method="post">
            <div class="mb-3 mt-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
            </div>
            <div class="mb-3 mt-3">
                <label class="form-label" for="comment">Comments</label>
                <textarea class="form-control" id="comment" name="review[comment]" cols="30" rows="10"></textarea>
            </div>
            <button class="btn btn-outline-dark mb-3">submit</button>
        </form>
    </div>